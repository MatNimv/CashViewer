@{
    ViewData["Title"] = "Expenses Page";
}

@model List<Expense>


<div class="text-center">
    <h1 class="display-4">Expenses</h1>
    <br />
    <hr />
    <h3>Total Expenses ;- $@ViewBag.Expenses</h3>
    <br />
    <a asp-action="CreateEditExpense" class="btn btn-secondary mb-4">Add New Expense</a>
    <br />
    <!--
        table written in Razer syntax
    -->
    <table class=" table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Value
                </th>
                <th>
                    Description
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var expense in Model)
                {
                    <tr>
                        <td>
                        @expense.Id
                        </td>
                        <td>
                            @expense.Value
                        </td>
                        <td>
                            @expense.Description
                        </td>
                        <td>
                            <a asp-action="CreateEditExpense" asp-route-id="@expense.Id">Edit</a>
                            <a asp-action="DeleteExpense" asp-route-id="@expense.Id">Delete</a>
                        </td>  
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
